{
  "compilerOptions": {
    // We never emit JS code (only type declarations) from TSC, so ignore those
    // options.
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
  },
  "include": [
    "benchmark",
    "example-runner",
    "generator",
    "script",
    "src",
    "test",
    "test262"
  ],
  "exclude": [
    "benchmark/sample",
    "example-runner/example-repos"
  ]
}
